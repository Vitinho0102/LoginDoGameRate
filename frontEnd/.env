# URL base da API
API_URL=http://localhost:3000/api

# Configurações do cliente
PORT=3001
NODE_ENV=development

# Configurações de autenticação
AUTH_TOKEN_KEY=gameRateToken

# Configurações de timeout das requisições
API_TIMEOUT=5000

# Configurações de paginação
ITEMS_PER_PAGE=12

# Configurações de cache
CACHE_DURATION=3600

# Configurações de tema
DEFAULT_THEME=light

# URLs permitidas para imagens
ALLOWED_IMAGE_DOMAINS=cdn.steamstatic.com,steamcdn-a.akamaihd.net

# Configurações de desenvolvimento
ENABLE_LOGS=true
DEBUG_MODE=false

# Configurações de integração com Steam
STEAM_API_URL=https://api.steampowered.com